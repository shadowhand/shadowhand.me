<body class="home">
	<header id="head">
		<h1>i am shadowhand</h1>
		<p class="intro">i build web stuff, buy organic food, and drink a lot of tea.</p>
		{{!
		<nav>
			<ul>
				<li><a href="#">Home</a></li>
				<li><a href="#">About</a></li>
				<li><a href="#">Services</a></li>
				<li><a href="#">Contact</a></li>
			</ul>
		</nav>
		}}
	</header>

	<div id="main">
		{{#projects}}
		<section class="project">
			<h3 class="title"><a href="{{url}}">{{name}}</a> {{#language}}<small class="language">{{language}}</small>{{/language}}</h3>
			<p class="description">{{description}}</p>
			<aside class="meta">
				{{#homepage}}
				<span class="website"><a href="{{homepage}}">website</a></span>
				{{/homepage}}
				<span class="forks">{{forks}} forks</span>
				<span class="watchers">{{watchers}} watchers</span>
				<span class="issues">{{open_issues}} issues</span>
			</aside>
		</section>
		{{/projects}}
	</div>

	<aside id="side">
		<p>like my stuff? maybe you could <a href="http://amzn.com/w/1474H3P2204L8">buy me a beer</a>?</p>

		<h6>twitter feed</h6>
		<div id="tweets" class="query">
			<p><a href="http://twitter.com/shadowhand">follow me on twitter</a></p>
		</div>

		<h6>github activity</h6>
		<div id="github" class="query">
			<p><a href="http://github.com/shadowhand">my github activity</a></p>
		</div>
	</aside>

	<footer>
		<p class="top bottom">
			<span>copyright &copy; 2011 shadowhand</span>
			<small>{{environment}} // {{php}}</small>
		</p>
		<a id="fork-me" href="http://github.com/shadowhand/shadowhand.me">fork me on github!</a>
	</footer>

